        }

        .callout ul {
            margin: 0;
            padding-left: 20px;
        }

        .callout li {
            margin-bottom: 8px;
        }

        .be-honest {
            color: #dc3545;
            font-weight: bold;
            text-align: right;
            margin-top: 15px;
            font-style: italic;
        }

        .scale-info {
            display: none; /* Hiding the old scale info */
        }

